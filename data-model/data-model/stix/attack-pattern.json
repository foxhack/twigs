{
  "$schema": "http://json-schema.org/draft-04/schema#",
	"title": "attack-pattern",
  "description": "Techniques used to execute a cyber attack",
	"type": "object",
  "allOf": [
    {
      "$ref": "ttp-base.json"
    },
    {
      "properties": {
        "capec_id": {
          "type": "string",
          "description": "CAPEC ID for this attack pattern"
        }
      }
    }
  ],
  "relationships": {
    "related": ["malware", "attack-pattern", "exploit", "victim-targeting", "tool", "infrastructure", "persona"],
    "kill-chain-phases": ["kill-chain-phase"],
    "targets": ["exploit-target"],
    "equivalent": ["attack-pattern"]
  }
}
