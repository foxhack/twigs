{
  "$schema": "http://json-schema.org/draft-04/schema#",
	"title": "observation",
  "description": "A observation of potentially malicious activity",
	"type": "object",
  "allOf": [
    {
      "$ref": "../common/core.json"
    },
    {
      "properties": {
        "type": {
          "type": "string",
          "enum": ["observation"]
        },
        "object": {
          "type": "object",
          "description": "CybOX object definition that was observed."
        },
        "observed_at": {
          "type": "array",
          "items": {
            "$ref": "../common/timestamp.json"
          },
          "description": "A list of times that this sighting was observed."
        },
        "observed_at_precision": {
          "$ref": "../common/timestamp.json#/definitions/precision"
        }
      },
      "required": ["object"]
    }
  ],
  "relationships": {
    "related": ["attack-pattern", "campaign", "configuration", "course-of-action", "exploit", "incident", "indicator", "infrastructure", "kill-chain", "kill-chain-phase", "malware", "observation", "persona", "report", "threat_actor", "tool", "victim-targeting", "vulnerability", "weakness"],
    "sighted": ["indicator"],
    "duplicate-of": ["observation"]
  }
}
