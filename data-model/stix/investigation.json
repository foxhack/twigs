{
  "$schema": "http://json-schema.org/draft-04/schema#",
	"title": "investigation",
  "description": "Investigation of a cyber attack",
	"type": "object",
  "allOf": [
    {
      "$ref": "../common/core.json"
    },
    {
      "$ref": "../common/describable.json"
    },
    {
      "properties": {
        "type": {
          "type": "string",
          "enum": ["investigation"]
        },
        "category": {
          "type": "string",
          "enum": ["Investigation", "investigation"]
        },
        "impact": {
          "description": "The impact of this attack on operations",
          "$ref": "../common/impact.json"
        }
    	}
    }
  ],
  "relationships": {
    "proposed-coa": ["course-of-action"],
    "implemented-coa": ["course-of-action"],
    "leveraged-ttp": ["malware", "attack-pattern", "exploit", "victim-targeting", "tool", "infrastructure", "persona"],
    "attribution": ["threat-actor", "campaign"],
    "related": ["investigation", "indicator"],
    "equivalent": ["investigation"]
  }
}
