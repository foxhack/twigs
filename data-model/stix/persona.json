{
  "$schema": "http://json-schema.org/draft-04/schema#",
	"title": "persona",
  "description": "False identity used to perpetrate an attack",
	"type": "object",
  "allOf": [
    {
      "$ref": "../stix/ttp-base.json"
    },
    {
      "properties": {
        "type": {
          "type": "string",
          "enum": ["persona"]
        },
        "identity": {
          "$ref": "../common/identity-characteristics.json",
          "description": "The identifying characteristics that this persona describes."
        }
      },
      "required": ["identity"]
    }
  ],
  "relationships": {
    "related": ["malware", "attack-pattern", "exploit", "victim-targeting", "malicious-tool", "malicious-infrastructure", "persona"],
    "kill-chain-phases": ["kill-chain-phase"],
    "exploits": ["exploit-target"],
    "duplicate-of": ["exploit"]
  }
}
