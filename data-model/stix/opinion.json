{
  "$schema": "http://json-schema.org/draft-04/schema#",
	"title": "opinion",
  "description": "An opinion about another object",
	"type": "object",
  "allOf": [
    {
      "$ref": "../common/core.json"
    },
    {
      "$ref": "../common/describable.json"
    },
    {
      "properties": {
        "type": {
          "type": "string",
          "enum": ["opinion"]
        },
        "object_ref": {
          "type": "string",
          "description": "The id of the object to which this opinion refers"
        },
        "agreement": {
          "type": "array",
          "description": "The type of opinion being made",
          "items": {
            "enum": [
              "Strongly Agree",
              "Agree",
              "Undecided",
              "Disagree",
              "Strongly Disagree",
              "Unknown"
            ]
          }
        }
      }
    }
  ],
  "relationships": {
    "related": ["attack-pattern", "campaign", "configuration", "course-of-action", "exploit", "investigation", "indicator", "infrastructure", "kill-chain", "kill-chain-phase", "malware", "observation", "opinion", "persona", "relationship", "report", "threat-actor", "tool", "victim-targeting", "vulnerability", "weakness"],
    "duplicate-of": ["opinion"]
  }
}
